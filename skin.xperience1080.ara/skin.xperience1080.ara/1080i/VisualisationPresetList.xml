<window>
    <defaultcontrol always="true">6</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="button" id="6">
            <width>1</width>
            <posx>-10</posx>
            <onfocus>close</onfocus>
            <animation effect="fade" start="0" end="100" delay="10">Focus</animation>
            <visible>!Skin.HasSetting(OSDVisualisation.Enabled) | [Skin.HasSetting(OSDVisualisation.Enabled) + [Window.IsActive(addonsettings) | Window.IsActive(selectdialog)]]</visible>
        </control>
        <control type="button" id="6">
            <width>1</width>
            <posx>-10</posx>
            <onfocus>SetFocus(2)</onfocus>
            <animation effect="fade" start="0" end="100" delay="50">Focus</animation>
            <visible>Skin.HasSetting(OSDVisualisation.Enabled) + !Window.IsActive(addonsettings) + !Window.IsActive(selectdialog)</visible>
        </control>
        <control type="group">
            <include>NowPlayingFullscreen</include>
            <visible>Skin.HasSetting(OSDVisualisation.Enabled) + !Window.IsActive(addonsettings) + !Window.IsActive(selectdialog)</visible>
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>osd/fullscreen/osdsettings.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>osd/fullscreen/osdsettings-separators.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="label" id="3">
                <description>Heading</description>
                <posx>510</posx>
                <posy>245</posy>
                <width>900</width>
                <height>34</height>
                <align>center</align>
                <label>-</label>
                <font>Font-Condensed-S34-B</font>
                <textcolor>bbwhite</textcolor>
                <shadowcolor>66000000</shadowcolor>
            </control>
            <control type="label" id="4">
                <description>No presets label</description>
                <posx>455</posx>
                <posy>482</posy>
                <width>1010</width>
                <height>76</height>
                <align>center</align>
                <aligny>center</aligny>
                <label>13389</label>
                <font>Font-Condensed-S34-B</font>
                <textcolor>77white</textcolor>
                <shadowcolor>66000000</shadowcolor>
            </control>
            <control type="group">
                <control type="list" id="2">
                    <description>Control Area</description>
                    <posx>420</posx>
                    <posy>294</posy>
                    <width>1080</width>
                    <height>532</height>
                    <orientation>vertical</orientation>
                    <pagecontrol>60</pagecontrol>
                    <onleft>60</onleft>
                    <onright>60</onright>
                    <onup>2</onup>
                    <ondown>2</ondown>
                    <scrolltime>0</scrolltime>
                    <itemlayout height="76" width="1080">
                        <control type="label">
                            <posx>35</posx>
                            <posy>0</posy>
                            <width>1010</width>
                            <height>76</height>
                            <font>Font-Condensed-S30-B</font>
                            <textcolor>96FFFFFF</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout height="76" width="1080">
                        <control type="group">
                            <visible>!Control.HasFocus(2)</visible>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout" condition="![Container(2).Scrolling | Container(2).OnScrollNext | Container(2).OnScrollPrevious]">Visible</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="![Container(2).Scrolling | Container(2).OnScrollNext | Container(2).OnScrollPrevious]">Hidden</animation>
                            <control type="label">
                                <posx>35</posx>
                                <posy>0</posy>
                                <width>1010</width>
                                <height>76</height>
                                <font>Font-Condensed-S30-B</font>
                                <textcolor>96FFFFFF</textcolor>
                                <align>left</align>
                                <aligny>center</aligny>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                        <control type="group">
                            <visible>Control.HasFocus(2)</visible>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout" condition="![Container(2).Scrolling | Container(2).OnScrollNext | Container(2).OnScrollPrevious]">Visible</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="![Container(2).Scrolling | Container(2).OnScrollNext | Container(2).OnScrollPrevious]">Hidden</animation>
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>1080</width>
                                <height>77</height>
                                <texture border="150,1,150,1">windows/settings/images/right-focus.png</texture>
                            </control>
                            <control type="label">
                                <posx>35</posx>
                                <posy>0</posy>
                                <width>1010</width>
                                <height>76</height>
                                <font>Font-Condensed-S30-B</font>
                                <textcolor>white</textcolor>
                                <align>left</align>
                                <aligny>center</aligny>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                <control type="image" id="63">
                    <animation effect="fade" start="100" end="0" time="0" delay="1500">WindowOpen</animation>
                </control>
                <control type="image" id="62">
                    <animation effect="fade" start="0" end="100" time="0">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="0">Hidden</animation>
                    <visible>Control.HasFocus(60) | !Control.IsVisible(63)</visible>
                </control>
                <control type="image" id="62">
                    <animation effect="fade" start="0" end="100" time="0">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="0" delay="1500">Hidden</animation>
                    <visible>!Control.HasFocus(60) + [Container(2).Scrolling | Container(2).OnScrollNext | Container(2).OnScrollPrevious]</visible>
                </control>
                <control type="scrollbar" id="60">
                    <description>Scrollbar</description>
                    <posx>1476</posx>
                    <posy>304</posy>
                    <width>11</width>
                    <height>514</height>
                    <onleft>2</onleft>
                    <onright>2</onright>
                    <texturesliderbar border="0,6,0,6">views/other/scrollbar.png</texturesliderbar>
                    <texturesliderbarfocus border="0,6,0,6">views/other/scrollbar.png</texturesliderbarfocus>
                    <orientation>vertical</orientation>
                    <showonepage>false</showonepage>
                    <animation effect="fade" start="50" end="0" time="300" tween="sine" easing="inout" condition="!Control.IsVisible(62)">Conditional</animation>
                </control>
            </control>
        </control>
    </controls>
</window>