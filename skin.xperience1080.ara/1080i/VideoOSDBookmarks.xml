<window>
    <defaultcontrol always="true">1</defaultcontrol>
    <controls>
        <control type="group">
            <include>FullscreenDimensions</include>
            <include>NowPlayingFullscreen</include>
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>osd/bookmarks/back.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="label" id="2">
                <description>Settings</description>
                <posx>785</posx>
                <posy>245</posy>
                <width>350</width>
                <height>34</height>
                <align>center</align>
                <label>$LOCALIZE[298] ($INFO[Container(11).NumItems])</label>
                <font>Font-Condensed-S34-B</font>
                <textcolor>bbwhite</textcolor>
                <shadowcolor>66000000</shadowcolor>
                <scroll>false</scroll>
            </control>
            <control type="grouplist" id="1">
                <posx>878</posx>
                <posy>751</posy>
                <height>100</height>
                <width>200</width>
                <itemgap>-36</itemgap>
                <orientation>horizontal</orientation>
                <onup>11</onup>
                <ondown>11</ondown>
                <onleft>1</onleft>
                <onright>1</onright>
                <animation effect="slide" start="0" end="-100" time="250" tween="sine" easing="inout" condition="Control.HasFocus(11)">Conditional</animation>
                <control type="button" id="2">
                    <description>Add</description>
                    <height>100</height>
                    <width>100</width>
                    <texturefocus>osd/bookmarks/add-fo.png</texturefocus>
                    <texturenofocus>osd/bookmarks/add-nf.png</texturenofocus>
                </control>
                <control type="button" id="3">
                    <description>Delete</description>
                    <height>100</height>
                    <width>100</width>
                    <texturefocus>osd/bookmarks/delete-fo.png</texturefocus>
                    <texturenofocus>osd/bookmarks/delete-nf.png</texturenofocus>
                </control>
            </control>
            <control type="label">
                <posx>1114</posx>
                <posy>751</posy>
                <width>150</width>
                <height>96</height>
                <font>Font-Condensed-S30-B</font>
                <label>$INFO[Container(11).ListItem.Label]</label>
                <textcolor>aawhite</textcolor>
                <scroll>false</scroll>
                <align>right</align>
                <aligny>center</aligny>
                <visible>Control.HasFocus(11)</visible>
                <animation type="Visible" reversible="false">
                    <effect type="fade" start="0" end="100" time="250" tween="sine" easing="out" />
                    <effect type="slide" start="-20" end="0" time="250" tween="sine" easing="inout" />
                </animation>
                <animation type="Hidden" reversible="false">
                    <effect type="fade" start="100" end="0" time="250" tween="sine" easing="out" />
                    <effect type="slide" start="0" end="-20" time="250" tween="sine" easing="inout" />
                </animation>
                <!--<animation effect="fade" start="0" end="100" time="250" tween="sine" easing="inout">Visible</animation>
                <animation effect="fade" start="100" end="0" time="250" tween="sine" easing="inout">Hidden</animation>-->
            </control>
            <control type="list" id="11">
                <posx>771</posx>
                <posy>294</posy>
                <width>378</width>
                <height>456</height>
                <onleft>11</onleft>
                <onright>12</onright>
                <onup>1</onup>
                <ondown>1</ondown>
                <pagecontrol>12</pagecontrol>
                <scrolltime>0</scrolltime>
                <itemlayout width="378" height="228">
                    <control type="image">
                        <posx>19</posx>
                        <posy>19</posy>
                        <width>340</width>
                        <height>190</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout width="378" height="228">
                    <control type="group">
                        <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout" condition="![Container(11).Scrolling | Container(11).OnScrollNext | Container(11).OnScrollPrevious]">Visible</animation>
                        <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="![Container(11).Scrolling | Container(11).OnScrollNext | Container(11).OnScrollPrevious]">Hidden</animation>
                        <visible>Control.HasFocus(11)</visible>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>378</width>
                            <height>227</height>
                            <texture border="150,2,150,2">windows/settings/images/right-focus.png</texture>
                            <aspectratio>stretch</aspectratio>
                        </control>
                    </control>
                    <control type="image">
                        <posx>19</posx>
                        <posy>19</posy>
                        <width>340</width>
                        <height>190</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <aspectratio>stretch</aspectratio>
                    </control>
                </focusedlayout>
            </control>
            <control type="image" id="14">
                <animation effect="fade" start="100" end="0" time="0" delay="1500">WindowOpen</animation>
            </control>
            <control type="image" id="13">
                <animation effect="fade" start="0" end="100" time="0">Visible</animation>
                <animation effect="fade" start="100" end="0" time="0">Hidden</animation>
                <visible>Control.HasFocus(12) | !Control.IsVisible(14)</visible>
            </control>
            <control type="image" id="13">
                <animation effect="fade" start="0" end="100" time="0">Visible</animation>
                <animation effect="fade" start="100" end="0" time="0" delay="1500">Hidden</animation>
                <visible>!Control.HasFocus(12) + [Container(11).Scrolling | Container(11).OnScrollNext | Container(11).OnScrollPrevious]</visible>
            </control>
            <control type="scrollbar" id="12">
                <description>Scrollbar</description>
                <posx>1134</posx>
                <posy>304</posy>
                <width>11</width>
                <height>436</height>
                <onleft>11</onleft>
                <onright>11</onright>
                <texturesliderbar border="0,6,0,6">views/other/scrollbar.png</texturesliderbar>
                <texturesliderbarfocus border="0,6,0,6">views/other/scrollbar.png</texturesliderbarfocus>
                <orientation>vertical</orientation>
                <showonepage>false</showonepage>
                <animation effect="fade" start="30" end="0" time="300" tween="sine" easing="inout" condition="!Control.IsVisible(13)">Conditional</animation>
            </control>
        </control>
    </controls>
</window>